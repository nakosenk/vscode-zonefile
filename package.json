{
    "name": "vscode-zonefile",
    "displayName": "vscode-zonefile",
    "description": "Bind Zone File syntax highlighting",
    "version": "0.0.3",
    "publisher": "nakosenk",
    "author": {
        "email": "nakosenk@gmail.com",
        "name": "nakosenk"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/nakosenk/vscode-zonefile"
    },
    "bugs": {
        "url": "https://github.com/nakosenk/vscode-zonefile/issues"
    },
    "engines": {
        "vscode": "^1.24.0"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:zone"
    ],
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "zone",
                "aliases": [
                    "Bind9 DNS Zone",
                    "zone"
                ],
                "extensions": [
                    ".zone",
                    ".signed"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "zone",
                "scopeName": "text.zone_file",
                "path": "./syntaxes/zone.tmLanguage.json"
            }
        ],
        "commands":[
            {
                "command": "vscode-zonefile.formatZoneFileDocument",
                "title": "Format Zone File"
            }
        ],
        "snippets": [
            {
                "language": "zone",
                "path": "./snippets/zone.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "dns-zonefile": "^0.2.2"
    },
    "devDependencies": {
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.18",
        "@types/node": "^10.5.1"
    }
}
